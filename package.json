{
  "name": "@tatumio/tatum",
  "version": "2.0.0-alpha.0",
  "description": "Tatum API client allows browsers and Node.js clients to interact with Tatum API.",
  "repository": "https://github.com/tatumio/tatum-js",
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist* tsconfig.tsbuildinfo",
    "build": "tsc",
    "prepublish": "npm run clean && npm run build",
    "docs": "typedoc",
    "lint": "eslint ./src ./packages --ext .ts --fix",
    "clean:all": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;\nfind . -name '.yalc' -type d -prune -print -exec rm -rf '{}' \\;\nfind . -name 'dist' -type d -prune -print -exec rm -rf '{}' \\;",
    "test:deployment": "node deployment/dist/index.js"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "Tatum",
    "Blockchain",
    "Building Blocks",
    "Bitcoin",
    "Litecoin",
    "Stellar",
    "Tatum API",
    "XRP",
    "Ethereum"
  ],
  "author": "Tatum, hello@tatum.io",
  "license": "MIT",
  "devDependencies": {
    "@types/bip32": "^2.0.0",
    "@types/bip39": "^3.0.0",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.14",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "./jest-setup-file.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
