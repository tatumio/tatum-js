      "@tatumio/eth": ["packages/blockchain/eth/src/index.ts"],
      "@tatumio/kcs": ["packages/blockchain/kcs/src/index.ts"],
      "@tatumio/klaytn": ["packages/blockchain/klaytn/src/index.ts"],
      "@tatumio/ltc": ["packages/blockchain/ltc/src/index.ts"],
