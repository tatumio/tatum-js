{
  "name": "@tatumio/tatum",
  "version": "2.0.0-alpha.0",
  "description": "Tatum API client allows browsers and Node.js clients to interact with Tatum API.",
  "repository": "https://github.com/tatumio/tatum-js",
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist* tsconfig.tsbuildinfo",
    "build": "tsc",
    "prepublish": "npm run clean && npm run build",
    "docs": "typedoc",
    "lint": "eslint ./src ./packages --ext .ts --fix"
  },
  "private": true,
  "keywords": [
    "Tatum",
    "Blockchain",
    "Building Blocks",
    "Bitcoin",
    "Litecoin",
    "Stellar",
    "Tatum API",
    "XRP",
    "Ethereum"
  ],
  "author": "Tatum, hello@tatum.io",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "./jest-setup-file.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
